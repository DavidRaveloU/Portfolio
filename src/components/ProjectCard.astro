---
interface Props {
    title: string;
    description: string;
    tags: string[];
    link: string;
}

const { title, description, tags, link } = Astro.props;
---

<a href={link} class="block p-4 border border-twitter-gray rounded-xl hover:bg-twitter-gray/20 transition-colors">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-gray-400 mb-4">{description}</p>
    <div class="flex gap-2 flex-wrap">
        {tags.map((tag) => <span class="px-2 py-1 bg-twitter-gray/50 rounded-full text-sm text-twitter-blue">{tag}</span>)}
    </div>
</a>
